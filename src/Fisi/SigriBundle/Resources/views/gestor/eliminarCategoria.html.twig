<div class="form-horizontal validate " id="feliminarCategoriaR" method="post" name="feliminarCategoriaR" action="{{path('manteminientoCatalogoGestor')}}">
    <div class="form-group" >
        <div class="col-sm-4  control-label"  style="font-size: 12px; ">ID Categoria: </div>
        <div class="col-sm-6">
            <input type="text" class="form-control" disabled  id="idCategoriaRE" name="idCategoriaRE" value="{{categoria.idcategoria}}" style="width: 100%;">
        </div>
    </div>
    <div class="form-group" >
        <div class="col-sm-4  control-label"  style="font-size: 12px; ">Categoria: </div>
        <div class="col-sm-6">
            <input type="text" class="form-control"  disabled id="nombreCategoriaRE" name="nombreCategoriaR"  value="{{categoria.nombrecategoria}}"   style="width: 100%;">
        </div>
    </div>
    <div class="form-group" >
        <div class="col-sm-4  control-label"  style="font-size: 12px; ">Descripción: </div>
