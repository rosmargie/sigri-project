{# empty Twig template #}
<script>
    jQuery(document).ready(function () {
        registrarCategoriaV();
    });

    function cambiar(id, nombre) {

        jQuery("#tdCambiar" + id).attr("value", nombre);
    }
    function deshabilitarConsultarCatalogo() {
        jQuery("btnConsultarCatalogo").attr(":disabled");

    }



    function agregarFilaActGestor() {
        i = 1;

        jQuery(".clsFilaActividad").each(function () {
            i++;
        });

        if (jQuery('#trFilaActividad' + i).length) {
            i++;
        }

        jQuery.ajax({
            type: "POST",
            url: "{{path('agregarFilaGestor')}}",
            data: {
                fila: i
            }

        }).done(function (msg) {
            jQuery("#tBodyAgregarAct").append(msg);

        });
    }


    function eliminarFila(nrofila) {
        jQuery("#trFilaActividad" + nrofila).remove();
        alert("Se elimino fila");
    }

    function agregarFilaRespGestor() {
        i = 1;

        jQuery(".clsFilaResp").each(function () {
            i++;
        });

        if (jQuery('#trFilaResponsable' + i).length) {
            i++;
        }

        jQuery.ajax({
            type: "POST",
            url: "{{path('agregarFilaRespGestor')}}",
            data: {
                fila: i
            }

        }).done(function (msg) {
            jQuery("#tBodyAgregarResp").append(msg);

        });
    }


    function registrarCategoriaV() {
        jQuery.ajax({
            type: "POST",
            url: '{{path('registrarCategoriaV')}}'
        }).done(function (msg) {
            jQuery("#dRegistro").html(msg);
        });
    }

    function editarCategoriaV(idCategoria) {
        jQuery.ajax({
            type: "POST",
            url: '{{path('editarCategoriaV')}}',
            data: {
                'idCategoria': idCategoria
            }
        }).done(function (msg) {
            jQuery("#dRegistro").html(msg);
        });
    }

    function eliminarCategoriaV(idCategoria) {
        jQuery.ajax({
            type: "POST",
            url: '{{path('eliminarCategoriaV')}}',
            data: {
                'idCategoria': idCategoria
            }
        }).done(function (msg) {
            jQuery("#dRegistro").html(msg);
        });
    }




</script>