{% extends 'FisiSigriBundle:Default:solicitanteLayout.html.twig' %}
{% block title %}Crear Solicitud{% endblock %}
{% block content %}
     
    <center><h1 style="margin-left: 0px;margin-right: 100px;">REGISTRO DE SOLICITUD / INCIDENCIA </h1></center>
    <center><div class="panel-body">

            <form role="form" class="form-horizontal validate " id="formRegSolicitud" method="post" name="reg_solicitud" action="{{ path('solicitar_usuario') }}">



                <div class="form-group">
                    <label class="col-sm-3 control-label">Solicitante</label>

                    <div class="col-sm-5">

                        <input type="text" class="form-control" value="{{ [empleado.nombre, ' ',empleado.apellidopaterno]|join }}" name="solicitante" data-validate="required,solicitante" data-message-required="Datos Obligatorios" placeholder="Nombre de Solicitante">

                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-3 control-label">Areá de Solicitante </label>

                    <div class="col-sm-5">

                        <input type="text" class="form-control" value="{{empleado.unidadOrganica.nombre}}" name="area" data-validate="required,area" data-message-required="Datos Obligatorios" placeholder="Ingresar area de solicitante">


                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Título</label>

                    <div class="col-sm-5">

                        <input type="text" class="form-control" name="titulo" data-validate="required,titulo" data-message-required="Datos Obligatorios" placeholder="Ingresar titulo de incidencia">


                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Tipo</label>

                    <div class="col-sm-5 icheck-list" Style="  margin-bottom: 0px; bottom: 19px; right: 100px;" >

                        <input tabindex="7" class="icheck" type="radio" id="minimal-radio-1" name="tipo_Sol" value="soporte" checked>
                        <label for="minimal-radio-1" >Soporte Técnico</label>

                        <input tabindex="8" class="icheck" type="radio" id="minimal-radio-2" name="tipo_Sol" value="sistemas" >
                        <label for="minimal-radio-2">Sistemas</label>

                        <input type="radio" class="icheck" id="minimal-radio-3" name="tipo_Sol" value="redes">
                        <label for="minimal-radio-3">Redes </label>

                    </div>
                </div>

                <div class="form-group" id="fr-contenedor">
                    <label class="col-sm-3 control-label">Fecha Reserva</label>

                    <div class="form-group">
                        <div class="form-group" style="
                             margin-left: 0px;
                             margin-right: 30px;
                             border-right-width: 100px;
                             padding-left: 235px;
                             border-left-width: 50px;
                             " >

                            <div class="col-sm-2" >
                                <div class="input-group">
                                    <input type="text" name="fechareserva" class="form-control datepicker" data-format="dd/mm/yyyy">

                                    <div class="input-group-addon">
                                        <a href="#"><i class="entypo-calendar"></i></a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    
                </div>
                 
        {#       <div class="form-group">
                    <label for="field-1" class="col-sm-3 control-label">Documentos</label>

                    <div class="col-sm-5">
                        <input type="file" class="form-control" id="field-file" placeholder="Placeholder">

                    </div>
                </div>
#}


                <div class="form-group">
                    <label class="col-sm-3 control-label">Descripción</label>

                    <div class="col-sm-5">

                        <textarea type="text" class="form-control"  name="descripcion" id="field-ta" placeholder="Escribir la Descripción de la incidencia" data-validate="required,descripcion" data-message-required="Datos Obligatorios"></textarea>

                    </div>
                </div>

                <div class="col-sm-offset-3 col-sm-5 form-group" style=" margin-left: 300px;" >
                    <button type="submit" class="btn btn-default">Enviar</button>

                    <button type="button" class="btn btn-default">Cancelar</button>
                </div>
            </form>


        </div></center>




{% endblock %}
{% block javascripts_unique %}
    {% javascripts 
        '@FisiSigriBundle/Resources/public/template/js/bootstrap-datepicker.js'
        '@FisiSigriBundle/Resources/public/template/js/bootstrap-timepicker.min.js'        
        '@FisiSigriBundle/Resources/public/template/js/icheck/icheck.min.js' 
        '@FisiSigriBundle/Resources/public/template/js/jquery.validate.min.js'

    %}
    <script src="{{ asset_url }}"></script>

    {% endjavascripts %}

    <script>
        jQuery('#formRegSolicitud').submit(function ( event ) {
            if (jQuery(this).valid() === true) {
                var c = confirm("¿Esta seguro que desea enviar la solicitud?");
                return c;
            }
        });



        jQuery('input[name=tipo_Sol]').click(function () {
            
            if (jQuery(this).val() === 'soporte') {
                jQuery("#fr-contenedor").show();
            }else{
                jQuery("#fr-contenedor").hide();
            }
        });
    </script>

{% endblock %}


